---
import { changeLanguage, t } from 'i18next';
import BaseLayout from '../../layouts/base-layout.astro';
import { CLOUDFRONT_BASE_URL } from '../../const';
import GradientText from '../../components/gradient-text.astro';

await changeLanguage('en');
---

<BaseLayout title="Dbot - RPG discord bot">
  <section class="relative h-full">
    <div class="relative grid h-full place-items-center">
      <h2 class="flex flex-col gap-2 sm:gap-4">
        <div class="grid place-items-center">
          <img alt="icon" src={`${CLOUDFRONT_BASE_URL}icons/BotIcon.png`} class="h-24 w-24 md:h-32 md:w-32" />
        </div>
        <div class="text-center text-7xl font-extrabold tracking-tighter text-primary sm:text-8xl">
          <GradientText text="RPG." />
          <br />
          <GradientText text="Discord." />
          <br />
          <GradientText text="Bot." />
        </div>
      </h2>
    </div>
  </section>
</BaseLayout>
