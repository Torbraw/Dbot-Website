---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Dbot - RPG discord bot">
  <section class="relative h-full bg-black">
    <div class="relative grid h-full place-items-center sm:grid-cols-2">
      <h2 class="flex flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end">
        <img
          alt="icon"
          src="https://d2lqwktucnc67y.cloudfront.net/icons/BotIcon.png"
          class="h-24 w-32 text-white md:h-32"
        />
        <div class="gradient-text text-center text-8xl font-extrabold tracking-tighter text-orange-400">
          Build fast
          <br /> websites,
          <br /> faster.
        </div>
      </h2>
    </div>
  </section>
</BaseLayout>
