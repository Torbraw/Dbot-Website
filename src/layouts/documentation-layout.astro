---
import type { MarkdownHeading } from 'astro';
import LeftSidebar from '../components/documentation/left-sidebar.astro';
import PageContent from '../components/documentation/page-content.astro';
import RightSidebar from '../components/documentation/right-sidebar.astro';
import type { Frontmatter } from '../types';
import BaseLayout from './base-layout.astro';

export interface Props {
  frontmatter: Frontmatter;
  headings: MarkdownHeading[];
}

const { frontmatter, headings } = Astro.props;
const { title } = Astro.props.frontmatter;
const currentPage = Astro.url.pathname;
---

<BaseLayout title={title} headerFixed={true}>
  <div class="flex flex-col items-center">
    <main
      class="grid w-full max-w-7xl flex-1 grid-cols-1 gap-4 md:grid-cols-[250px_auto] lg:mb-12 lg:grid-cols-[250px_auto_250px]"
    >
      <aside
        class="sticky col-span-1 hidden w-full flex-col justify-start overflow-y-auto pt-4 md:top-24 md:flex md:pt-0 md:[margin-inline-start:16px]"
      >
        <LeftSidebar currentPage={currentPage} />
      </aside>
      <div class="col-span-1 flex w-full flex-col pt-5">
        <PageContent frontmatter={frontmatter} currentPage={currentPage}>
          <slot />
        </PageContent>
      </div>
      <aside class="sticky col-span-1 hidden w-full lg:flex lg:flex-col lg:justify-start">
        <RightSidebar headings={headings} title={frontmatter.title} />
      </aside>
    </main>
  </div>
</BaseLayout>
