---
import GradientText from '../components/common/gradient-text.astro';
import BaseLayout from './base-layout.astro';

export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<BaseLayout title={title} headerSticky={true}>
  <main class="space-y-8 p-4 sm:p-8">
    <div class="flex flex-col items-center">
      <GradientText class="text-center text-4xl sm:text-7xl font-extrabold tracking-tight !leading-tight">
        {title}
      </GradientText>
    </div>
    <div class="mx-auto grid grid-cols-1 p-0 lg:px-16">
      <slot />
    </div>
  </main>
</BaseLayout>
