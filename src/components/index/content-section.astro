---
import GradientText from '../common/gradient-text.astro';

export type Props = {
  title: string;
};
const { title } = Astro.props;
---

<section class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8">
  <div class="flex flex-col items-center">
    <GradientText class="text-center text-6xl sm:text-7xl font-extrabold tracking-tight">
      {title}
    </GradientText>
  </div>
  <p class="max-w-xl text-center text-2xl font-extrabold sm:text-3xl">
    <slot name="main" />
  </p>
  <slot />
</section>
