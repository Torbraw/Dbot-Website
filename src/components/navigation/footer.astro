---
import type { FooterLink } from '../../types';
import { Icon } from 'astro-icon';
import Link from '../common/link.astro';
const { PUBLIC_DBOT_DISCORD_LINK } = import.meta.env;

const links: Array<FooterLink> = [
  {
    url: PUBLIC_DBOT_DISCORD_LINK,
    icon: 'fa-brands:discord',
    ariaLabel: 'Community Discord',
  },
];
---

<footer class="flex w-full flex-col border-t border-default py-4">
  <!-- <div class="mb-4 flex justify-center gap-4">
    <Link href={`/${currentLanguage}/terms-of-service`}>{t('footer:termsOfService')}</Link>
    <Link href={`/${currentLanguage}/privacy-policy`}>{t('footer:privacyPolicy')}</Link>
  </div> -->
  <div class="flex justify-center gap-4">
    <ul>
      {
        links.map(({ ariaLabel, url, icon }) => (
          <li>
            <Link ariaLabel={ariaLabel} class="flex rounded-full border-2 border-current p-2" href={url}>
              <Fragment>
                <Icon class="h-[24px] w-[24px]" name={icon} />
              </Fragment>
            </Link>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
