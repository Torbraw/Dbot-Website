---
import type { Frontmatter } from '../../types';
import GradientText from '../common/gradient-text.astro';
import Pagination from './pagination.astro';

export interface Props {
  frontmatter: Frontmatter;
  currentPage: string;
}

const { frontmatter, currentPage } = Astro.props;
const title = frontmatter.title;
---

<article id="article" class="flex w-full max-w-screen-lg flex-col">
  <section class="w-full">
    <h1 id="overview" class="mb-4 px-4 text-3xl font-extrabold">
      <GradientText>{title}</GradientText>
    </h1>
    <article class="markdown w-full">
      <slot />
    </article>
  </section>
</article>
<!-- <Pagination currentPage={currentPage} /> -->

<style>
  .markdown {
    @apply flex w-full flex-col items-start justify-start px-4 leading-relaxed;
  }
</style>
