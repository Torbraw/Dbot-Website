---
import i18next, { t } from 'i18next';
import type { FooterLink } from '../../types';
import { Icon } from 'astro-icon';
import Link from '../common/link.astro';
import { INVITE_LINK } from '../../config';

const currentLanguage = i18next.language;

const links: Array<FooterLink> = [
  {
    url: INVITE_LINK,
    icon: 'fa-brands:discord',
  },
];
---

<footer class="flex w-full flex-col border-t border-default py-4">
  <div class="mb-4 flex justify-center gap-4">
    <Link href={`/${currentLanguage}/terms-of-service`}>{t('footer:termsOfService')}</Link>
    <Link href={`/${currentLanguage}/privacy-policy`}>{t('footer:privacyPolicy')}</Link>
  </div>
  <div class="flex justify-center gap-4">
    <ul>
      {
        links.map((link) => (
          <li>
            <Link class="flex rounded-full border-2 border-current p-2" href={link.url}>
              <Fragment>
                <Icon class="h-[24px] w-[24px]" name={link.icon} />
              </Fragment>
            </Link>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
