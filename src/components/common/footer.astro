---
import i18next from 'i18next';
import type { FooterLink } from '../../types';
import { Icon } from 'astro-icon';
import Link from './link.astro';
import { INVITE_LINK } from '../../const';

const currentLanguage = i18next.language;

const links: Array<FooterLink> = [
  {
    url: INVITE_LINK,
    description: 'Astro on Discord',
    icon: 'fa-brands:discord',
  },
];
---

<footer class="relative flex justify-between border-t border-default px-8 py-4">
  <div class="flex items-center gap-4">
    <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
      {
        links.map((link) => (
          <li>
            <Link
              class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
              href={link.url}
            >
              <Fragment>
                <span class="sr-only">{link.description}</span>
                <Icon class="h-full" name={link.icon} />
              </Fragment>
            </Link>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="flex items-center gap-4">
    <Link href={`/${currentLanguage}/terms-of-service`}>Terms of Service</Link>
    <Link href={`/${currentLanguage}/privacy-policy`}>Privacy Policy</Link>
  </div>
</footer>
