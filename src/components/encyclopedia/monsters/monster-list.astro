---
import { t } from 'i18next';
import type { EncyclopediaItemListResponse, StringI18n, Monster } from '../../../types';
import ListWrapper from '../list-wrapper.astro';
import MonsterListItem from './monster-list-item.astro';

export type Props = {
  data: EncyclopediaItemListResponse<Monster>;
};

const { lang = 'en' } = Astro.params;
const { data } = Astro.props;
---

<ListWrapper isHeader={true}>
  <MonsterListItem
    name={t('encyclopedia:name', { lng: lang })}
    rarity={t('encyclopedia:rarity', { lng: lang })}
    isHeader={true}
  />
</ListWrapper>
{
  data.entries.map((e) => (
    <ListWrapper>
      <MonsterListItem
        name={e.name[lang as keyof StringI18n]}
        rarity={e.rarity.toString()}
        iconName={e.iconName}
        loots={e.loots}
      />
    </ListWrapper>
  ))
}
