---
import { t } from 'i18next';
import type { EncyclopediaItemListResponse, StringI18n, QuestResource } from '../../../types';
import ListWrapper from '../list-wrapper.astro';
import QuestResourceListItem from './quest-resource-list-item.astro';

export type Props = {
  data: EncyclopediaItemListResponse<QuestResource>;
};

const { lang = 'en' } = Astro.params;
const { data } = Astro.props;
---

<ListWrapper isHeader={true}>
  <QuestResourceListItem
    iconName=""
    name={t('encyclopedia:name', { lng: lang })}
    rarity={t('encyclopedia:rarity', { lng: lang })}
    isHeader={true}
  />
</ListWrapper>
{
  data.entries.map((e) => (
    <ListWrapper>
      <QuestResourceListItem
        name={e.name[lang as keyof StringI18n]}
        rarity={e.rarity.toString()}
        iconName={e.iconName}
      />
    </ListWrapper>
  ))
}
